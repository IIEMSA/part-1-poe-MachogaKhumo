@model Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this venue?</h3>

<div>
    <strong>Venue Name:</strong> @Model.VenueName<br />
    <strong>Location:</strong> @Model.Location<br />
    <strong>Capacity:</strong> @Model.Capacity<br />
    <img src="@Model.ImageUrl" alt="Venue Image" style="width:100px;" />
</div>

<form asp-action="Delete" >
    <input type="hidden" asp-for="VenueId" />
    <button type="submit" class="btn btn-danger" style="background-color: #b8a4c9; color: black; border-radius: 5px; padding: 8px 12px;">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
